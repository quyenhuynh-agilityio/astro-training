{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*", "auth.config.ts", "src/**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["astro/client"],
    "jsxImportSource": "react",
    "baseUrl": ".", // Required for resolving aliases from the project root
    "paths": {
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@styles/*": ["src/styles/*"],
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@sections/*": ["src/sections/*"],
      "@types-local/*": ["src/types/*"],
      "@queries/*": ["src/queries/*"]
    }
  }
}
