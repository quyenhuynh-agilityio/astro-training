---
// src/components/PortableText.astro
import { PortableText as PortableTextInternal } from 'astro-portabletext';
import PortableTextImage from '../PortableTextImage/index.astro';
import { H2Block, H3Block, NormalBlock } from '@components/Blocks';
import type { PortableTextBlock } from 'sanity';

interface Props {
  value: PortableTextBlock | string;
}

const { value } = Astro.props;

const components = {
  types: {
    image: PortableTextImage,
  },
  block: {
    normal: NormalBlock,
    h2: H2Block,
    h3: H3Block,
  },
};
---

<PortableTextInternal {value} {components} />
