---
import { PortableText as PortableTextInternal } from 'astro-portabletext';
import { H2Block, H3Block, NormalBlock } from '@components/Blocks';
import SanityImage from '@components/SanityImage/index.astro';

const components = {
  types: {
    image: SanityImage,
  },
  block: {
    normal: NormalBlock,
    h2: H2Block,
    h3: H3Block,
  },
};
---

<PortableTextInternal value={Astro.props.value} {components} />
