---
import Button from '@components/Button';
import Navigation from '@components/Navigation';
import type { NavItem, SanityImageType } from '@types-local/common';
import SanityImage from '@components/SanityImage/index.astro';
interface HeaderProps {
  logo?: SanityImageType;
  navItems?: NavItem[];
  ctaText?: string;
}

const { logo, navItems, ctaText } = Astro.props as HeaderProps;
---

<header class="w-full bg-transparent py-10">
  <div
    class="max-w-sm md:max-w-7xl mx-auto flex items-center justify-between px-6 md:px-12"
  >
    <SanityImage
      node={logo}
      width={256}
      height={68}
      sizes="128px"
      className="w-32 h-34 object-contain"
      loading="eager"
    />
    <div class="gap-2 flex items-center md:gap-60">
      <Navigation links={navItems} />
      <Button rightIcon="path">{ctaText}</Button>
    </div>
  </div>
</header>
