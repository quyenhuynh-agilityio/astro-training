---
// src/components/PropertyHeroSection.astro
import Header from '@layouts/Header';
import PortableText from '@components/PortableText/index.astro';

interface NavItem {
  title: string;
  link: string;
}

interface Logo {
  url: string;
  alt: string;
}

interface Props {
  title: string;
  address: string;
  price: string;
  pricePerSqft: string;
  logo: Logo;
  navItems: NavItem[];
  ctaText: string;
}

const { title, address, price, pricePerSqft, logo, navItems, ctaText } =
  Astro.props as Props;
---

<section class="bg-black text-white">
  <Header {logo} {navItems} {ctaText} />

  <div
    class="max-w-7xl px-6 md:px-12 mx-auto py-8 flex flex-col md:flex-row justify-between items-start md:items-center"
  >
    <div>
      <PortableText value={title} />
      <PortableText value={address} />
    </div>

    <div class="mt-6 md:mt-0 text-right">
      <p class="text-2xl font-bold">{price}</p>
      <p class="text-gray-400 text-sm">{pricePerSqft}</p>
    </div>
  </div>
</section>
