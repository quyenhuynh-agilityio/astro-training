---
import SanityImage from '@components/SanityImage/index.astro';
const { t, index } = Astro.props;
---

<button
  type="button"
  class="testimonial-btn flex items-center transition px-6 py-4 w-336 bg-white hover:bg-gray-100"
  data-index={index}
>
  <SanityImage
    node={t.image}
    width={48}
    height={48}
    sizes="(max-width: 768px) 100vw, 48px"
    className="rounded-full mb-2 w-12 h-12"
    loading="lazy"
  />
  <div class="flex flex-col ml-5">
    <span class="text-sm font-medium text-black">{t.author}</span>
    <span class="text-xs text-gray-900">{t.role}</span>
  </div>
</button>
