---
import PortableTextImage from '@components/PortableTextImage/index.astro';
const { t, index } = Astro.props;
---

<button
  type="button"
  class="testimonial-btn flex items-center transition px-6 py-4 w-336 bg-white hover:bg-gray-100"
  data-index={index}
>
  <PortableText
    node={t.image}
    class="w-14 h-14 rounded-full object-cover mb-2"
  />
  <div class="flex flex-col ml-5">
    <span class="text-sm font-medium text-black">{t.name}</span>
    <span class="text-xs text-gray-900">{t.role}</span>
  </div>
</button>
