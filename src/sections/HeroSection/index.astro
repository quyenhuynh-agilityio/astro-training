---
import PortableTextImage from '@components/PortableTextImage/index.astro';
import PortableText from '@components/PortableText/index.astro';
import Header from '@layouts/Header/index.astro';
import { Icons } from '@components/Icons';

interface HeroProps {
  title: string | any[];
  subtitle: string | any[];
  labelBtn?: string | any[];
  image?: { asset?: any; alt?: string };
  logo?: any;
  navItems?: any[];
  ctaText?: string;
}

const { title, subtitle, labelBtn, image, logo, navItems, ctaText } =
  Astro.props as HeroProps;
---

<section class="relative w-full h-[90vh] overflow-hidden">
  <PortableTextImage
    node={image}
    class="absolute inset-0 w-full h-full object-cover responsive__img"
  />

  <div class="absolute inset-0 bg-gradient-to-b from-black/50 to-black/20">
  </div>
  <div
    class="relative z-20 flex flex-col h-full max-w-7xl mx-auto px-6 md:px-12"
  >
    <Header {logo} {navItems} {ctaText} />
    <div class="flex-1 flex items-center">
      <div>
        <div class="max-w-xl">
          <PortableText value={title} />
        </div>

        <div class="mt-4 max-w-md text-gray-200">
          <PortableText value={subtitle} />
        </div>
      </div>
    </div>
    <div class="w-full">
      <div
        class="bg-white w-full px-10 py-9 shadow-lg flex items-center gap-2 cursor-pointer hover:underline"
      >
        <span class="font-semibold">{labelBtn}</span>
        <Icons.Path className="w-5 h-10 text-primary ml-1" />
      </div>
    </div>
  </div>
</section>
